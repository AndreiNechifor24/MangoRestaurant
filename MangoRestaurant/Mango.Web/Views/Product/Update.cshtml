@model Mango.Web.Models.DTOs.ProductDto

<h1>Update product</h1>
<hr />

<form asp-controller="Product" asp-action="Update" method="post">
    
    @Html.HiddenFor(prod => prod.ProductId)

    <div class="form-group">
        <label class="col-form-label col-4">Name</label>
        <input type="text" asp-for="Name" class="form-control col-4" />
    </div>

    <div clas="form-group">
        <label class="col-form-label col-4">Description</label>
        <input type="text" asp-for="Description" class="form-control col-4" />
    </div>

    <div class="form-group">
        <label class="col-form-label col-4">Price</label>
        <input type="text" asp-for="Price" class="form-control col-4" />
    </div>

    <div class="form-group">
        <label class="col-form-label col-4">Category</label>
        <input type="text" asp-for="Category" class="form-control col-4" />
    </div>

    <input type="submit" class="btn btn-primary" value="Update product" />

    <a href="~/Product/Index" class="btn btn-danger">Cancel</a>


</form>