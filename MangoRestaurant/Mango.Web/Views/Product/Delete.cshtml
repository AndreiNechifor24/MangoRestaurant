@using Microsoft.AspNetCore.Server.Kestrel.Core.Internal.Http
@model Mango.Web.Models.DTOs.ProductDto

<h1>Delete product</h1>
<hr />

<form asp-controller="Product" asp-action="Delete">

    @Html.HiddenFor(prod => prod.ProductId)

    <div class="form-group">
        <label class="col-form-label col-4">Name</label>
        <p>@Model.Name</p>
    </div>

    <div clas="form-group">
        <label class="col-form-label col-4">Description</label>
        <p>@Model.Description</p>
    </div>

    <div class="form-group">
        <label class="col-form-label col-4">Price</label>
        <p>@Model.Price</p>
    </div>

    <div class="form-group">
        <label class="col-form-label col-4">Category</label>
        <p>@Model.Category</p>
    </div>

    <input type="submit" class="btn btn-primary" value="Delete product" />

    <a href="~/Product/Index" class="btn btn-danger">Cancel</a>


</form>