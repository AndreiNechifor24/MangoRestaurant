@model Mango.Web.Models.DTOs.ProductDto

<h1>Create product</h1>
<hr />

<form asp-controller="Product" asp-action="Create" method="post">

    <div class="form-group">
        <label class="col-form-label col-4">Name</label>
        <input type="text" asp-for="Name" value="" class="form-control col-4"/>
    </div>
    
    <div clas="form-group">
        <label class="col-form-label col-4">Description</label>
        <input type="text" asp-for="Description" value="" class="form-control col-4"/>
    </div>

    <div class="form-group">
        <label class="col-form-label col-4">Price</label>
        <input type="number" min="0" step="0.1" asp-for="Price" value="" class="form-control col-4"/>
    </div>

    <div class="form-group">
        <label class="col-form-label col-4">Category</label>
        <input type="text" asp-for="Category" value="" class="form-control col-4"/>
    </div>
    
    <input type="submit" class="btn btn-primary" value="Create product"/>
    
    <a href="~/Product/Index" class="btn btn-danger">Cancel</a>


</form>